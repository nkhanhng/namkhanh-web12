<form id="questionForm">
    <label for="exampleFormControlTextarea1"><h1>Ask please</h1></label>
    <textarea class="form-control" id="question" rows="3" maxlength="200" name="question"></textarea>
    <div id="remainCharacter">200 <span>characters</span></div>
    <button class="btn btn-warning mt-3">Send</button>
</form>

<script>
    $("#questionForm").submit(function(e){
        e.preventDefault();
        $.ajax({
            url: '/api/question',
            type: 'POST',
            data:{
                question: $("#question").val()
            },
            success: function(respone){
                console.log("Success",respone);
                if(respone.success) window.location.href = `/question/${respone.questionId}`
            },
            error: function(respone){
                console.log("Error",respone);
            }
        })
    })
</script>